@model Document_Saver.Models.ProjectDetails
<form method="post" asp-action="DeletePost">
    <input asp-for="Project_Id" hidden />
    <div class="border p-3 mt-4">    
        <div class="row pb-4">
            <h2 class="text-primary">
                Delete
            </h2>
            <hr />
            </div>

            <div asp-validation-summary="ModelOnly"></div>
            <div class="mb-3">
               <label asp-for="Project_Id"></label>
                  <input asp-for="Project_Id" class="form-control"/>
                  <span asp-validation-for="Project_Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
               <label asp-for="Project_Name"></label>
                <input asp-for="Project_Name" class="form-control"/>
                <span asp-validation-for="Project_Name" class="text-danger"></span>

            </div>
            <div class="mb-3">
               <label asp-for="Project_Description"></label>
                <input asp-for="Project_Description" class="form-control"/>
                <span asp-validation-for="Project_Description" class="text-danger"></span>

            </div>
            <button class="btn btn-danger" type="submit" style="width:150px">Delete</button>
            <a asp-controller="ProjectDetails" asp-actions="Table"  class="btn btn-secondary" style="width:150px">Back To List</a>

        </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
