@model Documents

<form method="post">
     <input asp-for="Document_Id" hidden/>
   <div class="border p-3 mt-4">
    <div class="row pb-2">
    <h2 class="text-primary">Delete File</h2>
            <hr />
            </div>

           
           <div asp-validation-summary="All"></div>
           <div class= "user-details">
               <div class="input-box">
               <label asp-for="Document_Id" class="details"></label>
                  <input asp-for="Document_Id" placeholder="Enter your name" class="form-control"/>
                  <span asp-validation-for="Document_Id" class="text-danger"></span>
            </div>
            <div class="input-box">
               <label asp-for="Document_Name" class="details"></label>
                  <input asp-for="Document_Name" placeholder="Enter your name" class="form-control"/>
                  <span asp-validation-for="Document_Name" class="text-danger"></span>
            </div>
          
            
            <button class="btn btn-danger" type="submit" style="width:150px">Delete</button>
            <a asp-controller="Upload" asp-action="Index"  class="btn btn-secondary" style="width:150px">Back To Documents</a>

        </div>
        </div>

</form>